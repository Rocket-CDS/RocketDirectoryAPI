@using DNNrocketAPI.Components;
@using RocketDirectoryAPI.Components;
@AssigDataModel(Model)
<!--inject-->

@{
    var articleId = Model.SessionParamsData.GetInt("articleid");
}


    <div id="adminpanel">
        <div class="simplisity_loader">
            <span class=" simplisity_loader_inner">
            </span>
        </div>
    </div>
    
	
    <script>
        $('.heading_wrapper').hide();
        $(document).ready(function () {
        $('#adminpanel').getSimplisity('/Desktopmodules/dnnrocket/api/rocket/action', '@(systemData.SystemKey)_adminpanel', '{"systemkey":"@(systemData.SystemKey)","tabid":"@(sessionParams.TabId)","moduleid":"@(sessionParams.ModuleId)","articleid":"@(articleId)"}', '')
