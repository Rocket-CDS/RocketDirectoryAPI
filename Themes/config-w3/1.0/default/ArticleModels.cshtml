@inherits RocketDirectoryAPI.Components.RocketDirectoryAPITokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI.Components;
@using RocketDirectoryAPI.Components;
@AssignDataModel(Model)
<!--inject-->

<div class="w3-row modellistdatasection">

    <div class="w3-container">
        <div class="w3-col ">
            <div class="w3-button w3-padding-small  w3-border simplisity_click" s-post="#articledatasection" s-return="#modellistcontainer" s-list=".@articleData.ReviewListName,.@articleData.ModelListName,.@articleData.ImageListName,.@articleData.DocumentListName,.@articleData.LinkListName" s-cmd="articleadmin_addmodel" s-fields='{"articleid":"@articleData.ArticleId"}'>@ButtonIcon(ButtonTypes.add)&nbsp;@ResourceKey("RC.model")</div>
            <div class="w3-button w3-pale-yellow w3-padding-small simplisity_itemundo" s-recylebin="modellistbin" s-return="#modellistdata" s-removelist=".modellist" style="display: none;">@ButtonIcon(ButtonTypes.undo)</div>
        </div>
    </div>

    <div id="modellistcontainer" class="w3-container">
        [INJECT:appthemedirectory,ArticleModelsList.cshtml]
    </div>

</div>

    <script>
        $(document).ready(function () {
            $("#modellistdata").sortable();
            $("#modellistdata").disableSelection();
        });
    </script>
